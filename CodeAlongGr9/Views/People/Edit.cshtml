@model Person
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit person</h1>

<form asp-action="Edit" method="post">
    <label asp-for="SSN"></label>
    <input asp-for="SSN" readonly="readonly"/>
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <label asp-for="City"></label>
    <input asp-for="City" />
    <input type="submit" value="Save changes" />
</form>
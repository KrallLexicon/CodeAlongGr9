@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}

<h1>People</h1>

<p>
    <a asp-action="Create">Add new person</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>SSN</th>
            <th>Name</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SSN</td>
                <td>@item.Name</td>
                <td>@item.City</td>

                <td>
                    <a asp-action="Edit" asp-route-ssn="@item.SSN">Edit</a>
                    <a asp-action="Delete" asp-route-ssn="@item.SSN">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

